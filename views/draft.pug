doctype html
html
  head
    title Daily Casts Drafting
    style.
      img.cardimage { height: 345px; width: 250px; float:left; margin:5px; box-shadow: black 0px 0px 5px; border-radius: 5px; }
      img.cardimage.taken { opacity: 0.40; }
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
  body(ng-app="draftApp" class="container" draft-room= id)
    div(id="draftpane" class="col-md-9")
      h2(class="text-center") Draft
      draft-panel
    div(id="sidepane" class="col-md-3")
      h2(class="text-center") Your list
      draft-card-list
    script(type="text/javascript" src="/angular/angular.js")
    script(type="text/javascript" src="/socket.io/socket.io.js")
    script(type="text/javascript" src="/js/socketio.js")
    script(type="text/javascript" src="/js/draft.js")
